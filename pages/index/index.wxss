/**index.wxss**/
#menu {

}

.page_row { 
  background-color: #f0f0f0;
  position: fixed;
  width: 100%;
  top: 0;
  overflow: hidden;
  display: flex; 
  flex-direction: row;  
  align-items: center;  
  z-index: 1;
}
.nav {
  height: 80rpx;
  line-height: 80rpx;
  width: 25%;
  text-align: center;
}
.nav_item {
  border-bottom: 1px solid #999;
}
.content {
  float: left;
  width: 25%;
  z-index: 2;
}
.on {
  color: blue;
}
.red {
  display: inline-block;
  color: #d0d0d0;
  font-size: 28rpx;
}
.icon {
  display: inline-block;
  color: red;
  transform: rotate(90deg);
}
.nav_content_arr {
  position: relative;
  top: 80rpx;
  height: 500rpx;
  animation: mymove 1s;
}
@keyframes mymove {
  from {height: 0px;}
  to {height: 500rpx;}
}
.nav_content {
  margin: 30rpx 25rpx 20rpx 30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 30rpx;
}

#map {
  margin: auto;
  margin-top: 10px;
  width: 96%;
  height: 600rpx;
  z-index: 0;
}
.userinfo {
  background-color: #dd544f;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 60rpx 20rpx 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  height: 800px;
  margin-top: 10px;
}
.listing {
  width: 100%;
  text-align: center;
  height: 100rpx;
  padding: 10rpx 5rpx;
  border: 1px solid #d0d0d0;
}