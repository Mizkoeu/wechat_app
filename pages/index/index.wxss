/**index.wxss**/

/** Navigation Bar **/
.page_row { 
  background-color: #f0f0f0;
  position: fixed;
  width: 100%;
  top: 0;
  overflow: hidden;
  display: flex; 
  flex-direction: row;  
  align-items: center;  
  z-index: 3;
}
.nav {
  height: 80rpx;
  line-height: 80rpx;
  width: 25%;
  text-align: center;
}
.nav_item {
  border-bottom: 1px solid #999;
}
.content {
  float: left;
  width: 25%;
}
.on {
  color: blue;
}
.red {
  display: inline-block;
  color: #d0d0d0;
  font-size: 28rpx;
}
.icon {
  display: inline-block;
  color: red;
  transform: rotate(90deg);
}
.nav_content_arr {
  position: relative;
  top: 80rpx;
  height: 500rpx;
  animation: mymove 1s;
}
@keyframes mymove {
  from {height: 0px;}
  to {height: 500rpx;}
}
.nav_content {
  margin: 30rpx 25rpx 20rpx 30rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 30rpx;
}

/** Banner Swiper View **/
.userinfo {
  top: 30rpx;
  background-color: #dd544f;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.banner {
  color: #f0f0f0;
  width: 100%;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx 20rpx 5rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  position: absolute;
  top: 60rpx;
  width: 100%;
}
.intro {
  margin: auto;
  width: 90%;
  font-size: 32rpx;
  padding: 5rpx;
}
.usermotto {
  background-color: white;
  margin-top: 10px;
}
.listing_container {
  font-size: 32rpx;
  width: 100%;
  height: 160rpx;
  padding: 10rpx 5rpx;
  border: 1px solid #d0d0d0;
}
.house-img {
  display: flex;
  position: relative;
  height: 0;
}
.img {
  position: relative;
  border: 2px solid #d0d0d0;
  width: 25%;
  height: 150rpx;
  left: 20rpx;
  vertical-align: middle;
}
.listing {
  position: relative;
  width: 70%;
  height: 150rpx;
  left: 30%;
  text-align: left;
}
.specs {
  display: block;
}
.size {
  font-size: 28rpx;
  color: #808080;
}
.price {
  font-size: 28rpx;
  color: #dd544f;
}
.user-motto {
  display: block;
}